    <script>
        // Toggle FAQ items
        function toggleFAQ(button) {
            const parent = button.parentElement;
            const content = parent.querySelector('div');
            const icon = button.querySelector('svg');
            
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        // Code tab switching
        document.querySelectorAll('.code-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const lang = this.dataset.lang;
                const parent = this.closest('.bg-gray-900');
                
                // Toggle active classes
                parent.querySelectorAll('.code-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Switch code content
                // Implement language switching logic here
            });
        });

        // Scroll spy for sidebar
        window.addEventListener('scroll', function() {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('aside a');
            
            sections.forEach(section => {
                const rect = section.getBoundingClientRect();
                if(rect.top <= 100 && rect.bottom >= 100) {
                    const id = section.getAttribute('id');
                    navLinks.forEach(link => {
                        link.classList.remove('nav-highlight');
                        if(link.getAttribute('href') === `#${id}`) {
                            link.classList.add('nav-highlight');
                        }
                    });
                }
            });
        });
    </script>


    






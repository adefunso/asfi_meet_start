<body>


  <div class="main-content" style="width: 100%; margin: auto;">
    <header>
      <h1>Posters Overview</h1>
      <!-- <div class="stats">
        <div>Total Posters: <span id="total-posters">0</span></div>
      </div> -->
      <div class="col-sm-6 col-lg-4">
				<div class="text-center p-4 bg-primary bg-opacity-10 border border-primary rounded-3" >
					<h6>Total</h6>
					<h2 class="mb-0 fs-1 text-primary" id="total-posters">0</h2>
				</div>
			</div>
    </header>

    <!-- Poster list section -->
    <section class="poster-lists" id="poster-lists">
      <h2>Most Rated Posters</h2>
      <div class="poster-grid" id="most-rated">
        <!-- Posters will be dynamically added here -->
        <table>
          <thead>
            <td>Poster Title</td>
            <td>Presenter Name</td>
            <td>Total Rating</td>
            <td>Actions</td>
          </thead>

          <tbody id="most-ratedList">
            
          </tbody>
         </table>
      </div>

      <h2>Most Viewed Posters</h2>
      <div class="poster-grid" id="most-viewed">
        <!-- Posters will be dynamically added here -->
        <table>
          <thead>
            <td>Poster Title</td>
            <td>Presenter Name</td>
            <td>Total Views</td>
            <td>Actions</td>
          </thead>

          <tbody id="most-viewedList">
            
          </tbody>
         </table>
      </div>

      <h2>Most Liked Posters</h2>
      <div class="poster-grid" id="most-liked">
        <!-- Posters will be dynamically added here -->
        <table>
          <thead>
            <td>Poster Title</td>
            <td>Presenter Name</td>
            <td>Total Likes</td>
            <td>Actions</td>
          </thead>

          <tbody id="most-likedList">
            
          </tbody>
         </table>
      </div>

      

      <h2>Most Disliked Posters</h2>
      <div class="poster-grid" id="most-disliked">
        <!-- Posters will be dynamically added here -->
        <table>
          <thead>
            <td>Poster Title</td>
            <td>Presenter Name</td>
            <td>Total Dislikes</td>
            <td>Actions</td>
          </thead>

          <tbody id="most-dislikedList">
            
          </tbody>
         </table>
      </div>
    </section>
    

   
  </div>
  <script>
    function toggleSidebar() {
      
      document.getElementById("sidebar").classList.toggle("show");
      document.getElementById("menu-icon").classList.toggle("slide");
    }
  </script>

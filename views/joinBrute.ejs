<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join meeting</title>
</head>
<body>
    <style>
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }
        body {
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: row;
            overflow: hidden;
            justify-content: flex-start;
            background-color: #2b2b2b;
        }
        .room {
            height: 100vh;
            flex-grow: 1; /* Makes it take the remaining space */
            transition: 300ms ease-in-out;
        }
        .wide {
            width: 70%;
            height: 100vh;
        }
        .posterWide {
            width: 30%;
        }
        .gutter {
            background-color: #2b2b2b;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            padding: 0px;
            margin: 0px;
            width: auto; /* Adjusts to fit the button size */
        }
        .gutter button {
            transform: rotate(-90deg);
            width: 100px;
            padding: 10px 20px;
            border-radius: 25px;
            color: white;
            outline: none;
            border: none;
            background-color: #80078b;
        }
        #posterFrameContainer {
            background-color: #2b2b2b;
            transition: 300ms ease-in-out;
            height: 100vh;
            padding: 0px;
            margin:0px;
        }
        .poster{
            height: 100%;
        }
        .small {
            width: 0px;
        }
    </style>

    <iframe src="<%=meetingRoom%>/<%=meetingId%>" frameborder="0" allow="camera; microphone; screen-wake-lock; display-capture" class="room" id="roomContainer"></iframe>

    <div class="gutter">
        <button id="posterButton">Posters</button>
    </div>

    <div class="postersFrameContainer small" id="posterFrameContainer">
        <iframe src="<%= postersRoom %>/posterlist/<%= meetingId %>" frameborder="0" class="poster"></iframe>
    </div>

    <script>
        const posterButton = document.getElementById("posterButton")
        const posterContainer = document.getElementById("posterFrameContainer")
        const roomContainer = document.getElementById("roomContainer")

        posterButton.addEventListener("click", function() {
            console.log("buttonClicked")
            posterContainer.classList.toggle("small")
            posterContainer.classList.toggle('posterWide')
            roomContainer.classList.toggle('wide')
        })
    </script>

</body>
</html>

  <style>
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      display: flex;
      font-family:sans-serif;
      background-color: #222;
      font-size: 15px;
    }
    h1,h2{
      font-size: 18px;
    }
    .sidebar {
      background-color: rgba(15, 15, 15);
      color: white;
      width: 250px;
      height: 100vh;
      padding: 20px;
      position: fixed;
      left: 0;
      top: 0;
      transition: transform 0.3s ease-in-out;
    }
    .sidebar.show {
      transform: translateX(0);
    }
    .sidebar h2 {
      text-align: center;
      font-size: 15px;
    }
    .sidebar ul {
      list-style: none;
      padding: 0;
    }
    .sidebar ul li {
      margin: 20px 0;
    }
    .sidebar ul li a {
      color: #ddd;
      text-decoration: none;
      font-size: 15px;
      display: block;
      padding: 10px;
      transition: background-color 0.3s;
    }
    .sidebar ul li a:hover {
      background-color: #4b345e;
    }
    .menu-icon {
      display: none;
      font-size: 18px;
      cursor: pointer;
      position: absolute;
      top: 20px;
      left: 20px;
      z-index: 1001;
      transition: transform 0.3s ease-in-out;
    }
    .menu-icon.slide {
      transform: translateX(600%);
    }
    .main-content {
      margin-left: 270px;
      padding: 20px;
      width: 100%;
      transition: margin-left 0.3s;
    }
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #222529;
      color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .poster-grid{
      overflow-x: auto;
      margin-bottom: 40px;
    }
    .poster-lists {
      margin-top: 40px;
      background-color: #222529;
      color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    thead td {
      font-weight: bold;
      background: #030303;
      padding: 10px;
      color: rgb(245, 245, 245);
    }
    tbody td {
      padding: 20px;
      border-bottom: 1px solid #dddddd52;
    }
    tbody td a {
      display: flex;
      justify-content: center;
      width: 120px;
      text-decoration: none;
      background-color: purple;
      color: white;
      padding: 10px;
      border-radius: 8px;
    }
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .menu-icon {
        display: block;
        font-size: 25px;
        background: purple;
        color: white;
        padding: 6px;
        border-radius: 8px;
      }
      .main-content {
        margin-left: 0;
        margin-top: 70px;
      }
    }
    .rounded-3 {
  border-radius: var(--bs-border-radius-lg) !important;
}
.bg-opacity-10 {
  --bs-bg-opacity: 0.1;
}
.bg-primary {
  --bs-bg-opacity: 1;
  background-color: rgba(var(--bs-primary-rgb), var(--bs-bg-opacity)) !important;
}
.text-center {
  text-align: center !important;
}
.p-4 {
  padding: 1.6rem !important;
}
.border-primary {
  --bs-border-opacity: 1;
  border-color: rgba(var(--bs-primary-rgb), var(--bs-border-opacity)) !important;
}
.border {
  border: var(--bs-border-width) var(--bs-border-style) var(--bs-border-color) !important;
}
*, ::before, ::after {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
.g-4, .gy-4 {
  --bs-gutter-y: 1.6rem;
}
.g-4, .gx-4 {
  --bs-gutter-x: 1.6rem;
}
.row {
  --bs-gutter-x: 1.875rem;
  --bs-gutter-y: 0;
}

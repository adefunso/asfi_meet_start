</head>
</head>
<body class="user">
    <%- include('userMeetingsNavbar.ejs') %>
    <div class="container">
        <div class="headAdmin">ASFIMeet Events</div>
        <h3>Upcoming Meetings</h3>
        <div class="meetings" id="meetingList">
            
            <% if(publicMeetings && publicMeetings.length > 0){ %>
                <% publicMeetings.forEach(function(meeting) { %>
                    <div class="meeting-item">
                        <p><strong><%= meeting.title %></strong> <span><%= meeting.time %></span></p>
                        <button onclick="addToCalendar('<%= meeting.title %>', '<%= meeting.time %>')">Add to Calendar</button>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No upcoming meetings.</p>
            <%} %>
        </div>
    </div>

    <script>

        function addToCalendar(title, date) {
            console.log(date)
            const calendarLink = `https://www.google.com/calendar/render?action=TEMPLATE&text=${title}&dates=${date}/${date}`;
            window.open(calendarLink, '_blank');
        }
    </script>
</body>
</html>
